<script>
(() => {
  const $ = (id) => document.getElementById(id);
  const toastEl = $("toast");

  function toast(msg){
    toastEl.textContent = msg;
    toastEl.classList.add("show");
    clearTimeout(toastEl._t);
    toastEl._t = setTimeout(()=>toastEl.classList.remove("show"), 2100);
  }

  // ===== Customize ONCE inside code (optional) =====
  // If you want her name without manual input, just change this:
  const HER_NAME = "Adu"; // e.g. "Aditi"
  $("nm").textContent = HER_NAME;

  // ===== Quotes rotate automatically =====
  const quotes = [
    "You rest. I‚Äôll handle the world. That‚Äôs the deal mere cutie pie.",
    "If healing had a speed button, mai din bhar usi pe khada rhta.",
    "Soft days are still progress. aap bhut aacha kr rhe ho choi.",
    "I‚Äôm sending you garam garam tomato soup energy and extra patience.",
    "Your smile is expensive. mai baniya hu pr still looks like an interesting opportunity to invest .",
    "You‚Äôre allowed to be tired. mai budhape tak yahi baitha hu .",
    "If you could see how loved you are, you‚Äôd heal super fast bacha .",
    "Today‚Äôs agenda: breathe, blink, heal. That‚Äôs it mera kadu .",
    "I wish I could take 100% of the discomfort.kuki apke upar wo suit nahi krta bilkul bhi  .",
    "Your only job is to rest. My job is to love you quiety choi bina sir mei dard kre "
  ];
  const quoteBox = $("quoteBox");
  const meta = $("meta");
  let qi = 0;

  function showQuote(){
    const q = quotes[qi % quotes.length];
    quoteBox.textContent = q;
    meta.textContent = "Auto-playing comfort line " + ((qi % quotes.length)+1) + " / " + quotes.length;
    qi++;
  }
  showQuote();
  setInterval(showQuote, 4200);

  // ===== Love tank fills by itself =====
  const fill = $("fill");
  const pct = $("pct");
  let v = 0;
  function setV(n){
    v = Math.max(0, Math.min(100, n));
    fill.style.width = v + "%";
    pct.textContent = Math.round(v);
    if(v === 100){
      $("secretText").textContent =
        "Unlocked: When you‚Äôre weak, I‚Äôll be your strength. When you‚Äôre overwhelmed, I‚Äôll be your calm. Heal up ‚Äî I‚Äôm right here.";
      $("modal").classList.add("show");
      popHearts(16);
      toast("Love tank full üíó");
    }
  }
  setInterval(() => {
    if(v < 100){
      setV(v + (0.6 + Math.random()*0.8)); // slow fill
    }
  }, 650);

  // ===== Hearts =====
  function popHearts(n=12){
    const heartChars = ["‚ù§Ô∏è","üíñ","üíó","üíì","üíò","‚ú®"];
    for(let i=0;i<n;i++){
      const el = document.createElement("div");
      el.className = "heart";
      el.textContent = heartChars[Math.floor(Math.random()*heartChars.length)];
      const x = Math.random()*window.innerWidth;
      const y = window.innerHeight - (Math.random()*120 + 10);
      const dx = (Math.random()*140 - 70) + "px";
      el.style.setProperty("--x", x + "px");
      el.style.setProperty("--y", y + "px");
      el.style.setProperty("--dx", dx);
      document.body.appendChild(el);
      setTimeout(()=>el.remove(), 1400);
    }
  }
  $("btnHearts").addEventListener("click", ()=>{
    popHearts(20);
    toast("Delivered: love in bulk üíå");
  });

  // little sparkle on click anywhere
  window.addEventListener("click", (e)=>{
    if(e.target.tagName.toLowerCase() === "button") return;
    popHearts(4);
  });

  // ===== Secret modal =====
  const modal = $("modal");
  $("btnSecret").addEventListener("click", ()=>{
    modal.classList.add("show");
    popHearts(10);
  });
  $("close").addEventListener("click", ()=>modal.classList.remove("show"));
  modal.addEventListener("click", (e)=>{ if(e.target === modal) modal.classList.remove("show"); });

  // ===== Calm hum (requires one tap) =====
  let audioOn=false, ac=null, osc=null, gain=null, lfo=null, lfoGain=null;

  function startCalm(){
    if(audioOn) return;
    ac = new (window.AudioContext || window.webkitAudioContext)();
    osc = ac.createOscillator();
    gain = ac.createGain();
    lfo = ac.createOscillator();
    lfoGain = ac.createGain();

    osc.type="sine";
    osc.frequency.value = 196; // soft hum
    gain.gain.value = 0.0;

    lfo.type="sine";
    lfo.frequency.value = 0.12;
    lfoGain.gain.value = 0.02;

    lfo.connect(lfoGain);
    lfoGain.connect(gain.gain);
    osc.connect(gain);
    gain.connect(ac.destination);

    osc.start();
    lfo.start();
    gain.gain.setValueAtTime(0.0, ac.currentTime);
    gain.gain.linearRampToValueAtTime(0.045, ac.currentTime + 0.8);

    audioOn=true;
    toast("Calm hum on üåô");
  }

  function stopCalm(){
    if(!audioOn) return;
    try{
      gain.gain.linearRampToValueAtTime(0.0, ac.currentTime + 0.35);
      setTimeout(()=>{
        osc?.stop?.(); lfo?.stop?.();
        ac?.close?.();
        ac=null; osc=null; gain=null; lfo=null; lfoGain=null;
      }, 450);
    }catch(e){}
    audioOn=false;
    toast("Calm hum off.");
  }

  $("btnCalm").addEventListener("click", ()=>startCalm());
  $("btnStop").addEventListener("click", ()=>stopCalm());

  // ===== Stars background =====
  const canvas = $("stars");
  const ctx = canvas.getContext("2d");
  const DPR = Math.max(1, Math.min(2, window.devicePixelRatio || 1));
  let W=0,H=0;

  function resize(){
    W = canvas.width = Math.floor(window.innerWidth * DPR);
    H = canvas.height = Math.floor(window.innerHeight * DPR);
    canvas.style.width = window.innerWidth + "px";
    canvas.style.height = window.innerHeight + "px";
  }
  window.addEventListener("resize", resize);
  resize();

  const stars = Array.from({length: 140}, ()=>({
    x: Math.random()*W,
    y: Math.random()*H,
    r: (Math.random()*1.8 + 0.4)*DPR,
    a: Math.random()*0.8 + 0.2,
    vx: (Math.random()*0.26 - 0.13)*DPR,
    vy: (Math.random()*0.22 - 0.11)*DPR
  }));

  function tick(){
    ctx.clearRect(0,0,W,H);
    for(const s of stars){
      s.x += s.vx; s.y += s.vy;
      if(s.x < -10) s.x = W+10;
      if(s.x > W+10) s.x = -10;
      if(s.y < -10) s.y = H+10;
      if(s.y > H+10) s.y = -10;

      ctx.globalAlpha = s.a;
      ctx.beginPath();
      ctx.arc(s.x, s.y, s.r, 0, Math.PI*2);
      ctx.fillStyle = "#ffffff";
      ctx.fill();
    }
    ctx.globalAlpha = 1;
    requestAnimationFrame(tick);
  }
  tick();

  // ===== First load magic =====
  setTimeout(()=>{ popHearts(10); toast("Just open and relax üíó"); }, 600);
})();
</script>
</body>
</html>
